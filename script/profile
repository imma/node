#!/usr/bin/env bash

function _node_profile {
  local shome="${_node_home:="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"}"
  PATH="$shome/bin:$shome/exec:$PATH"

  export NODE_VERSION="6.11.2"

  if [[ -f "${BOARD_PATH}/.nvm/nvm.sh" ]]; then
    source "${BOARD_PATH}/.nvm/nvm.sh" --no-use
    nvm use --silent --delete-prefix "$NODE_VERSION"
  fi
}

_node_profile
